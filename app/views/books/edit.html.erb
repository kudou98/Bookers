
<h1>Editing Book</h1>




<%= form_for(@book) do |f| %>





<% if @book.errors.any? %>
        <h3><%= @book.errors.count %> errors :</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>


  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Update Book' %></p>



<%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>
<% end %>